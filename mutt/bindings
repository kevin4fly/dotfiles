# bindings for generail {{{1
bind   generic j          next-entry
bind   generic k          previous-entry
bind   generic J          next-line
bind   generic K          previous-line
bind   generic H          top-page
bind   generic M          middle-page
bind   generic L          bottom-page
bind   generic gg         first-entry
bind   generic G          last-entry
bind   generic \cf        previous-page
bind   generic \cb        next-page
bind   generic \cu        half-up
bind   generic \cd        half-down

# }}}
# bindings for index {{{1
bind   index   j          next-entry
bind   index   k          previous-entry
bind   index   J          next-line
bind   index   K          previous-line
bind   index   H          top-page
bind   index   M          middle-page
bind   index   L          bottom-page
bind   index   gg         first-entry
bind   index   G          last-entry
bind   index   \cf        previous-page
bind   index   \cb        next-page
bind   index   \cu        half-up
bind   index   \cd        half-down
bind   index   \ck        previous-unread
bind   index   \cj        next-unread
bind   index   V          show-version
bind   index   A          list-reply
bind   index   b          bounce-message
bind   index   f          forward-message
bind   index   r          reply
bind   index   R          group-reply
# bind   index   P          recall-message
# bind   index   \Cp        forget-passphrase
# bind   index   <enter>    display-message

# }}}
# bindings for pager {{{1
bind   pager   j          next-line
bind   pager   k          previous-line
bind   pager   J          next-entry
bind   pager   K          previous-entry
bind   pager   H          top
# bind   pager   M          middle
bind   pager   L          bottom
bind   pager   gg         top
bind   pager   G          bottom
bind   pager   \cf        previous-page
bind   pager   \cb        next-page
bind   pager   \cu        half-up
bind   pager   \cd        half-down
bind   pager   \ck        previous-unread
bind   pager   \cj        next-unread
bind   pager   V          show-version
bind   pager   A          list-reply
bind   pager   b          bounce-message
bind   pager   f          forward-message
