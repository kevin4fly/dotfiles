# colours -- object foreground background
color   normal       default        default         # normal text

# index
color   index        yellow         default "~N"    # new
color   index        brightyellow   default "~N ~p" # to you(alternative)
color   index        yellow         default "~(~N)" # new in thread
# color   index        brightblack    default "~P"    # from you
color   index        green          default "~T"    # tagged
color   index        red            default "~D"    # deleted
color   index        brightgreen    default "~F"    # flagged

# main
color   status       green          default         # status line
color   attachment   yellow         default         # MIME attachments
color   bold         brightcyan     default         # highlight bold patterns in body
color   error        brightred      default         # errors
color   hdrdefault   blue           default         # default header lines
color   indicator    brightred      default         # actual message
color   markers      default        default         # "+" at beginning of wrapped lines
color   message      brightyellow   default         # info messages
color   normal       default        default         # normal text
color   search       yellow         default         # search matches
color   signature    default        default         # signature
color   tilde        default        default         # "~" at bottom of msg
color   tree         blue           default         # thread arrows
color   underline    default        default         # highlight underlined patterns in body

# set up the headers
# color   header       brightyellow   default "^from:"
# color   header       yellow         default "^to:"
# color   header       yellow         default "^cc:"
# color   header       blue           default "^date:"
# color   header       brightblue     default "^subject:"
color   header	     blue	        default  "^(from|subject):"

# quoted blocks
color   quoted       magenta        default
color   quoted1      red            default
color   quoted2      green          default
color   quoted3      cyan           default
color   quoted4      magenta	    default
color   quoted5      red            default
color   quoted6      green          default
color   quoted7      cyan     	    default
color   quoted8      magenta        default
color   quoted9      red 	        default

# *bold*, _underline_, and /italic/
color   body         brightcyan     default "(^| )\\*[^*]+\\*( |$)"
color   body         brightcyan     default "(^| )_[^_]+_( |$)"
color   body         brightcyan     default "(^| )/[^/]+/( |$)"
color   body	     cyan	        default  "((ftp|http|https)://|(file|news):|www\\.)[-a-z0-9_.:]*[a-z0-9](/[^][{} \t\n\r\"<>()]*[^][{} \t\n\r\"<>().,:!])?/?" # links
color   body	     cyan	        default  "[-a-z_0-9.+]+@[-a-z_0-9.]+" # emails
color   body	     red	        default  "(^| )\\*[-a-z0-9*]+\\*[,.?]?[ \n]"
color   body	     green	        default  "(^| )_[-a-z0-9_]+_[,.?]?[ \n]"
color   body         magenta        default  "(PROTO=[A-Z]+)|(DPT=[0-9]+)|(SRC=[0-9.]+)" # firewall(iptables) logs

# sidebar
color   sidebar_new yellow          default

