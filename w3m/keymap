# A sample of ~/.w3m/keymap
# for the detailed default mapping:
# vim /usr/share/doc/w3m/examples/keymap.default or
# vim /usr/share/doc/w3m/ja/examples/keymap.lynx

# Cursor/Page motion
keymap    j        MOVE_DOWN
keymap    k        MOVE_UP
keymap    h        MOVE_LEFT
keymap    l        MOVE_RIGHT
keymap    <        SHIFT_LEFT
keymap    >        SHIFT_RIGHT
keymap    J        UP
keymap    K        DOWN
keymap    \^,C-a   LINE_BEGIN
keymap    $,C-e    LINE_END
keymap    Z        CENTER_H
keymap    z        CENTER_V
keymap    g        BEGIN
keymap    G        END
keymap    w        NEXT_WORD
keymap    b        PREV_WORD
keymap    C-f      NEXT_PAGE
keymap    C-b      PREV_PAGE
keymap    C-g      LINE_INFO
keymap    }        REDO
keymap    {        UNDO

# Hyperlink operation
keymap    C-n      NEXT_LINK
keymap    C-p      PREV_LINK
keymap    d        PEEK_IMG        # peek image url
keymap    D        VIEW_IMAGE
keymap    C-d      SAVE_IMAGE
keymap    u        PEEK_LINK       # peek link url
keymap    U        PEEK            # peek current url
keymap    C-u      SAVE_LINK
keymap    C-o      HISTORY         # opened url in history
keymap    x        EXTERN          # browse current url using external browser
keymap    X        EXTERN_LINK     # browse link using external browser
keymap    C-k      COOKIE
keymap    L        LIST            # show all links and images

# Tab operation
keymap    T        NEW_TAB
keymap    t        TAB_MENU
keymap    C-t      TAB_LINK
keymap    C-h      PREV_TAB
keymap    C-l      NEXT_TAB
keymap    C-q      CLOSE_TAB

# Buffer operation
keymap    B        BACK            # go back to previous buffer
keymap    E        EDIT            # edit buffer source
keymap    v        VIEW            # view html source
keymap    s        SELECT_MENU     # select buffer
keymap    S        SAVE_SCREEN     # save buffer
keymap    r        REDRAW          # redraw buffer
keymap    R        RELOAD          # reload buffer

# Bookmark operation
keymap	  C-@	   MARK
keymap    m        ADD_BOOKMARK    # add bookmark
keymap    M        BOOKMARK        # show all bookmarks

# Mark operation
keymap    ]        NEXT_MARK
keymap    [        PREV_MARK

# vim:ft=w3m:tw=78:ts=4:sw=4:sts=4:et:fdm=marker
