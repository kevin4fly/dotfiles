# A sample of ~/.w3m/keymap
# for the detailed default mapping:
# vim /usr/share/doc/w3m/examples/keymap.default or
# vim /usr/share/doc/w3m/ja/examples/keymap.lynx

# Cursor/Page motion
keymap    C-f      NEXT_PAGE
keymap    C-b      PREV_PAGE
keymap    l        MOVE_RIGHT
keymap    h        MOVE_LEFT
keymap    j        MOVE_DOWN
keymap    k        MOVE_UP
keymap    K        DOWN
keymap    J        UP
#keymap    <        SHIFT_LEFT
#keymap    >        SHIFT_RIGHT
keymap    \^,C-a   LINE_BEGIN
keymap    $,C-e    LINE_END
keymap    Z        CENTER_H
keymap    z        CENTER_V
keymap    g        BEGIN
keymap    G        END
keymap    w        NEXT_WORD
keymap    b        PREV_WORD
keymap    C-g      LINE_INFO
keymap    }        REDO
keymap    {        UNDO
keymap    C-n      NEXT_LINK
keymap    C-p      PREV_LINK

## Hyperlink operation
keymap    C-t      TAB_LINK
keymap    P        PEEK_IMG        # peek image url
keymap    I        VIEW_IMAGE      # view image
keymap    A        SAVE_IMAGE      # add image
keymap    p        PEEK_LINK       # peek link url
keymap    i        PEEK            # peek current url
keymap    a        SAVE_LINK       # add link
keymap    C-o      HISTORY         # opened url in history
#Keymap    M        EXTERN          # browse current url using external browser
#keymap    m        EXTERN_LINK     # browse link using external browser
keymap    C-k      COOKIE
keymap    L        LIST            # show all links and images

# Buffer operation
keymap    B        BACK            # go back to previous buffer
keymap    <        PREV
keymap    >        NEXT
keymap    E        EDIT            # edit buffer source
keymap    v        VIEW            # view html source
keymap    s        SELECT_MENU     # select buffer
keymap    S        SAVE_SCREEN     # save buffer
keymap    r        REDRAW          # redraw buffer
keymap    R        RELOAD          # reload buffer

# Tab operation
keymap    T        NEW_TAB
keymap    C-q      CLOSE_TAB
keymap    C-l      NEXT_TAB
keymap    C-h      PREV_TAB
keymap    t        TAB_MENU


# Bookmark operation
keymap    x        ADD_BOOKMARK    # add bookmark
keymap    X        BOOKMARK        # show all bookmarks

# Mark operation
keymap	  C-@	   MARK
keymap    ]        NEXT_MARK
keymap    [        PREV_MARK

# vim:ft=w3m:tw=78:ts=4:sw=4:sts=4:et:fdm=marker
